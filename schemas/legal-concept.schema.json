{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://lawai.ai/schemas/legal-concept.schema.json",
  "title": "LawAI Legal Concept Schema",
  "description": "Canonical schema for validating LawAI legal awareness concepts",

  "type": "object",

  "required": [
    "concept_id",
    "concept_description",
    "legal_domain",
    "applicable_acts",
    "core_rules",
    "citizen_rights",
    "ai_boundaries"
  ],

  "properties": {
    "@id": {
      "type": "string",
      "format": "uri",
      "description": "Permanent global identifier for the legal concept"
    },

    "@type": {
      "type": "string",
      "enum": ["LegalConcept"]
    },

    "concept_id": {
      "type": "string",
      "pattern": "^[a-z0-9_]+$",
      "description": "Stable machine-readable identifier"
    },

    "concept_description": {
      "type": "object",
      "description": "Human-readable description in multiple languages",
      "required": ["en"],
      "additionalProperties": {
        "type": "string",
        "minLength": 10
      }
    },

    "intent_scope": {
      "type": "array",
      "description": "Real-world situations covered by this legal concept",
      "items": { "type": "string" },
      "minItems": 1
    },

    "legal_domain": {
      "type": "array",
      "items": { "type": "string" },
      "minItems": 1
    },

    "applicable_acts": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["act_name", "authority", "jurisdiction"],
        "properties": {
          "act_name": { "type": "string" },
          "belongs_to": { "type": "string" },
          "sections": {
            "type": "array",
            "items": { "type": "string" }
          },
          "authority": {
            "type": "string",
            "enum": ["India Code â€“ Government of India"]
          },
          "jurisdiction": {
            "type": "string",
            "enum": ["India"]
          },
          "base_url": {
            "type": "string",
            "format": "uri"
          }
        }
      }
    },

    "core_rules": {
      "type": "array",
      "items": { "type": "string" },
      "minItems": 1
    },

    "citizen_rights": {
      "type": "array",
      "items": { "type": "string" },
      "minItems": 1
    },

    "recommended_actions": {
      "type": "array",
      "items": { "type": "string" }
    },

    "ai_boundaries": {
      "type": "object",
      "required": [
        "legal_awareness_only",
        "no_legal_advice",
        "no_outcome_prediction",
        "refusal_if_not_in_context"
      ],
      "properties": {
        "legal_awareness_only": { "type": "boolean" },
        "no_legal_advice": { "type": "boolean" },
        "no_outcome_prediction": { "type": "boolean" },
        "mandatory_disclaimer": { "type": "boolean" },
        "refusal_if_not_in_context": { "type": "boolean" }
      }
    },

    "version": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$"
    },

    "last_reviewed": {
      "type": "string",
      "format": "date"
    }
  },

  "additionalProperties": false
}
